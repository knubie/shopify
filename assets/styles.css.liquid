/* product loop */

.heading {
	font-size: 24px;
	color: {{ settings.tertiary_color }};
}

.product {
	margin-bottom: 36px;
  position: relative;
	overflow: hidden;
}

.product .prod.columns.product-img {
	display: block;
	margin-bottom: 12px;
	margin-left: 0;
	margin-right: 0;
}

.price {
	font-family: ProximaNovaBold;
	font-size: 16px;
	color: {{ settings.tertiary_color }};
	padding-right: 11px;
}

.desc {
	font-size: 16px;
	color:{{ settings.secondary_color }};
	padding-left: 11px;
	border-left: 1px solid {{ settings.quinary_color }};
}

/* navigation */

.nav-head {
	font-family: ProximaNovaBold;
	font-size: 18px;
	color: {{ settings.primary_color }};
	margin-bottom: 18px;
	padding-left: 5px;
}

.nav-item {
	font-family: ProximaNovaRegular;
	font-size: 18px;
	color: {{ settings.primary_color }};
	padding-left: 5px;
	padding: 3px 0 3px 5px;
}

.nav-item-active {
	font-family: ProximaNovaRegular;
	font-size: 18px;
	color: {{ settings.accent_color }};
	padding-left: 5px;
	padding: 3px 0 3px 5px;
}

.nav-item:hover {
	background-color:	{{ settings.quinary_color }};	
}

/* search */

.search-terms {
	color: {{ settings.primary_color }};
}

/* start product page */

.pd-imgs {
	margin-bottom: 50px;
	position: relative;
	overflow: hidden;
}

.pd-spacer {
	margin-bottom: 100px;
}

.onsale {
	position: absolute;
	top: 0;
	right: 4px;
}

.pd-name {
	font-size: 24px;
	color: {{ settings.secondary_color }};
	margin-bottom: 30px;
}

.pd-desc {
	font-size: 14px;
	line-height: 20px;
	color: {{ settings.secondary_color }};
}

.pd-price {
	font-size: 18px;
	color:{{ settings.tertiary_color }};
	float: left;
}

.old-price {
	text-decoration: line-through;
	color: {{ settings.quaternary_color }};
}

#purchase-link {
	text-decoration: underline;
	text-transform: uppercase;
	color: {{ settings.accent_color }};
	font-family: ProximaNovaBold;
	font-size: 12px;
	float: right;
}

.thumb {
	float: left;
	width: 92px;
	margin-right: 10px;
	margin-top: 10px;
}

#big-img {
	margin: 0;
}

.last {
	margin-right: 0;
}

.pd-text select {
	width: 160px;
	margin-bottom: 30px;
	clear: both;
}

.related {
	margin-top: 100px;
}

.search-terms {
	color: {{ settings.primary_color }};
}

.selector-wrapper label {
	font-size: 14px;
	display: block;
	color: {{ settings.tertiary_color }};
}

/* cart */

.cart-last-col {
	width: 122px;
	text-align: right;
}

.remove a {
	font-size: 10px;
	text-transform: uppercase;
	color:{{ settings.primary_color }};
}

.remove a:hover {
	text-decoration: line-through;
}

.cart-price {
	font-family: ProximaNovaBold;
	font-size: 16px;
	color: {{ settings.tertiary_color }};
}

.cart-desc {
	font-size: 16px;
	color:{{ settings.secondary_color }};
}

.cart-col {
	padding-top: 30px;
}

.total-price {
	text-align: right;
}

.total {
	font-size: 18px;
	color:{{ settings.tertiary_color }};
}

.big-price {
	font-size: 24px;
	color:{{ settings.primary_color }};
}

.update-cart, .checkout {
	display: inline-block;
	margin-left: 30px;
	font-family: ProximaNovaBold;
	font-size: 12px;
}

.update-cart a, .update-cart a:hover, .update-cart a:visited {
	color: {{ settings.tertiary_color }};
	text-transform: uppercase;
	text-decoration: underline;
}

.checkout a, .checkout a:hover, .checkout a:visited {
	color: {{ settings.accent_color }};
	text-transform: uppercase;
	text-decoration: underline;
}

.adjust-qty img {
	display: inline-block;
}

.adjust-qty input {
	width: 30px;
	margin-left: 10px;
}

#update-button, #checkout-button {
	display: none;
}

/* start footer */

.footer, .push {
	height: 150px;
}

.push {
	clear: both;
}

.footer {
	text-align: center;
}

.footer-store-name {
	font-family: ProximaNovaBold;
	font-size: 14px;
	color: {{ settings.secondary_color }};
	display: inline-block;
	padding-right: 20px;
}

.footer-contact {
	font-size: 14px;
	color: {{ settings.secondary_color }};
	display: inline-block;
	border-left: 1px solid {{ settings.quinary_color }};
	padding-left: 20px;
	padding-right: 20px;
}

.footer-copyright {
	font-size: 14px;
	color: {{ settings.tertiary_color }};
}

.footer-cards {
	margin: 17px 0;
}

/* start blog */

.article {
	margin-bottom: 50px;
}

.article a:hover {
	border-bottom: 1px solid {{ settings.quinary_color }}
}

.blog-post-title, .error {
	font-size: 30px;
	color: {{ settings.primary_color }};
}

.author {
	color: {{ settings.primary_color }};
}

.blog-post-date, .error-long {
	font-size: 14px;
	color: {{ settings.tertiary_color }};
	line-height: 24px;
}

.bold {
	font-family: ProximaNovaBold;
}

.textile {
	font-size: 14px;
	color: {{ settings.secondary_color }};
	line-height: 19px;
}

.blog-details {
	font-size: 14px;
	color: {{ settings.primary_color }};
	line-height: 19px;
	margin-top: 17px;
}

.recent-posts {
	font-size: 24px;
	color: {{ settings.secondary_color }};
}

#rss {
	display: inline-block;
	margin-left: 10px;
}

.recent-title {
	font-size: 18px;
	color: {{ setting.primary_color }};
}

.recent-date {
	font-size: 14px;
	color: {{ settings.tertiary_color }};
}

.recent-post-list {
	margin-bottom: 17px;
}

/* start page */

.page-title {
	font-size: 30px;
	color: {{ settings.primary_color }};
}

.page-content {
	font-size: 14px;
	color: {{ settings.secondary_color }};
	line-height: 19px;
}

.page-content a:hover {
	border-bottom: 1px solid {{ settings.quinary_color }}
}

/* misc */

.search-holder-two {
	height: 73px;
}

.search-holder {
	background-color: {{ settings.background_color }};
}

.search-pusher {
	height: 10px;
}

#search-div {
	margin-bottom: 0;
}

.sticky-nav {
	float: none;
	top: 74px;
	position: fixed;
}
.sticky-search {
	float: none;
	top: 0;
	position: fixed;
	z-index: 90;

}


/* #Tablet (Portrait)
================================================== */

	/* Note: Design for a width of 768px */
	
@media only screen and (min-width: 768px) and (max-width: 959px) {
	.thumb { width: 71px; }
	
}


/*  #Mobile (Portrait)
================================================== */

	/* Note: Design for a width of 320px */
	
@media only screen and (max-width: 767px) {
	
	#cart-items, #cart-total { display: none;}
	.container .product.prod.columns.related-middle { margin-right: 0; }
	.thumb.two.columns.alpha { width: 67px; }
	.container .columns.cart-col { width: 223px; padding-top: 2px; }
	.price-after { display: none; }
	.cart-last-col { text-align: left; }
	.adjust-qty input { margin-left: 5px; }
}


/* #Mobile (Landscape)
================================================== */

/* Note: Design for a width of 480px */

@media only screen and (min-width: 480px) and (max-width: 767px) {
	
	#cart-items, #cart-total { display: none;}
	.container .product.prod.columns.related-last { display: none; }
	.thumb { width: 96px; }
	
}
