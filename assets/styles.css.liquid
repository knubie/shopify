html, body {
	height: 100%;
}

body {
	-webkit-font-smoothing: antialiased;
	-moz-font-smoothing: antialiased;
	-o-font-smoothing: antialiased;
	font-smoothing: antialiased;
	{% if settings.use_bg_image %}
		background-image: url('bg.png');
	{% endif %}
	background-color:	{{ settings.background_color }};
	font-family: ProximaNovaRegular;
}

.container {
	height: auto !important;
	height: 100%;
	margin: 0 auto -150px;
}
.top {
	min-height: 100%;
}

a:link {
	text-decoration: none;
	color: {{ settings.primary_color }};
}

a:hover {
	text-decoration: none;
	color: {{ settings.primary_color }};
}

a:visited {
	text-decoration: none;
	color: {{ settings.primary_color }};
}

.logo {
	font-family: ProximaNovaSemibold;
	color: {{ settings.primary_color }};
	font-size: 48px;
	margin-top: 30px;
	margin-bottom: 10px;
}

.shopping-cart {
	font-size: 12px;
	color: {{ settings.secondary_color }};
	text-align: right;
	margin-top: 4px;
}

.shopping-cart div {
	display: inline-block;
	padding: 4px 13px 4px 13px;
}

#cart-items, #cart-total {
	border-right: 1px solid {{ settings.quinary_color }};
}

#cart-img {
	padding-right: 0px;
	padding-bottom: 0px;
}

#cart-img img {
	margin-bottom: -3px;
}

.nivo-controlNav {
    position:absolute;
    right: 20px;
		top: 277px;
    z-index:20;
}

.nivo-controlNav a {
    display:block;
    width:12px;
    height:12px;
    background:url(bullets.png) no-repeat;
    text-indent:-9999px;
    border:0;
    margin-right:3px;
    float:left;
}

.nivo-controlNav a.active {
    background-position:0 -12px;
}

.carousel {
	margin-bottom: 16px;
}

.divider {
	margin-bottom: 17px;
	margin-top: 17px;
	border-bottom: 1px solid {{ settings.quinary_color }};
}

.search-form {
	border: 0;
	outline: none;
	display: inline-block;
}

#magnify {
	display: inline-block;
	margin-top: 2px;
}

.search-box {
	border: 0;
	-webkit-appearance: none;
	height: 28px;
	font-size: 18px;
	width: 240px;
	color: {{ settings.primary_color }};
	background-color: transparent;
	-webkit-font-smoothing: antialiased;
	-moz-font-smoothing: antialiased;
	-o-font-smoothing: antialiased;
	font-smoothing: antialiased;
}

input::-webkit-input-placeholder {
	color: {{ settings.quaternary_color }};
}
input:-moz-placeholder {
	color: {{ settings.quaternary_color }};
}

.placeholder {
	color: {{ settings.quaternary_color }};
}

input:focus {
	outline: none;
}

/* on sale banners */

.small-sale-banner {
  -moz-transform:rotate(45deg);
  -webkit-transform:rotate(45deg);
	-moz-transform-origin: bottom left;
	-webkit-transform-origin: bottom left;
	top: -27px;
	width:129px;
	height:30px;
	position: absolute;
	right: -34px;
  vertical-align: bottom;
	z-index: 10;
}

.small-sale-banner-ie {
	width:129px;
	height:30px;
	position: absolute;
	right: -34px;
  vertical-align: bottom;
	z-index: 10;
}

.small-sale-left {
  border-color: transparent transparent {{ settings.accent_color }} transparent;
	border-style: solid;
	border-width: 0 0 25px 25px;
	width: 0;
	height: 0;
